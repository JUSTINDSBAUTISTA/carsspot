<!-- _form_step1.html.erb-->
<div class="form-header">
  <h1>Earn money by renting out your car</h1>
</div>
<div class="form-content">
  <div class="form-section">
    <div class="form-group" data-controller="places-autocomplete">
      <%= form.label :address, "Enter your city", class: "form-label" %>
      <%= form.text_field :address, class: "form-input", id: "car_address", data: { "places-autocomplete-target" => "formInput" }, placeholder: "Enter a location" %>
      <button type="button" class="btn btn-primary" data-action="click->form#nextStep">Next</button>
    </div>
    <div class="info-text">Please select a city to continue.</div>
  </div>
  <div class="form-image">
    <img src="https://media.istockphoto.com/id/540529776/photo/portrait-of-young-woman-in-car-looking-at-map.jpg?s=2048x2048&w=is&k=20&c=tW09L4B8o8gr1PggDy591Pv5zsYEyAOQejSuM9lHL60=" alt="Car rental image" class="responsive-image">
  </div>
</div>


<div class="info-section">
  <div class="info-stats">
    <div class="info-stat">
      <h3>1.6 million</h3>
      <p>drivers</p>
    </div>
    <div class="info-stat">
      <h3>5.6 million</h3>
      <p>trips completed</p>
    </div>
    <div class="info-stat">
      <h3>24/7</p>
      <p>Customer service</p>
    </div>
    <div class="info-stat">
      <h3>Extensive coverage</h3>
    </div>
  </div>

  <h2 class="section-title">Two ways to share</h2>
  <p class="section-subtitle">Rent when you want, at the price you want</p>

  <div class="sharing-options">
    <div class="option-card">
      <span class="badge1">Owner’s favorite choice</span>
      <h3>Without key exchange</h3>
      <p>Rent often and earn more</p>
      <div class="option-details">
        <%= image_tag "brand.png", alt: "Getaround Connect icon" %>
        <h4>Getaround Connect</h4>
        <p>Drivers open your car from the app</p>
      </div>
      <p>No need to meet drivers. They book, locate and unlock your car from the app.</p>
      <p><strong>We verify each driver’s identity</strong> so your car always stays in good hands.</p>
    </div>

    <div class="option-card">
      <h3>Key exchange</h3>
      <p>Rent very occasionally</p>
      <div class="option-details">
        <%= image_tag "brand.png", alt: "Key exchange icon" %>
        <h4>Meet drivers</h4>
        <p>Hand over the keys every time</p>
      </div>
      <p>Meet drivers at each check-in and check-out to sign the rental agreement.</p>
      <p>Suitable for car sharing outside of Getaround Connect eligible zones.</p>
    </div>
  </div>
</div>

