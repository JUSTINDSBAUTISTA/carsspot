}

.apply-button, .reset-button {
  background-color: #4CAF50;
  color: white;
  padding: 12px 24px;
  border: none;
  cursor: pointer;
  border-radius: 8px;
  margin-top: 20px;
  transition: background-color 0.2s;
}

.apply-button:hover, .reset-button:hover {
