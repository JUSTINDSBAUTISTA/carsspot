<h1>Cars</h1>

<div class="main-container">
  <div class="cars-container">
    <% @cars.each do |car| %>
      <div class="car-item" id="car-<%= car.id %>">
        <%= render partial: 'car_details', locals: { car: car } %>
      </div>
    <% end %>
    <% if current_user %>
      <%= link_to 'Add New Car', new_car_path, class: 'add-car-button' %>
    <% end %>
  </div>

  <div class="map-container" data-controller="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value='<%= @markers.to_json %>'>
    <div id="map" style="width: 100%; height: 100%;"></div>
  </div>
</div>


<style>
.main-container {
  display: flex;
  height: 100vh;
}

.cars-container {
  width: 50%;
  padding: 20px;
  overflow-y: auto;
}

.map-container {
  width: 50%;
  position: relative;
}

#map {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}

.car-item {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  padding: 20px;
  text-align: center;
  margin-bottom: 20px;
}

.car-item h2 {
  font-size: 1.5em;
  margin-bottom: 10px;
}

.car-item img.car-image {
  width: 100%;
  height: auto;
  max-width: 250px;
  margin-bottom: 15px;
}

.car-item p {
  font-size: 1em;
  margin: 5px 0;
}

.car-item .buttons {
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 100%;
}

.car-item .btn {
  display: inline-block;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  color: #fff;
  background-color: #007bff;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
  width: 100%;
}

.car-item .btn:hover {
  background-color: #0056b3;
}

.car-item .btn.btn-secondary {
  background-color: #6c757d;
}

.car-item .btn.btn-secondary:hover {
  background-color: #5a6268;
}

.car-item .btn.btn-danger {
  background-color: #dc3545;
}

.car-item .btn.btn-danger:hover {
  background-color: #c82333;
}

.add-car-button {
  display: block;
  margin: 30px auto;
  padding: 15px 30px;
  font-size: 1.2em;
  border-radius: 10px;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #28a745;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
}

.add-car-button:hover {
  background-color: #218838;
}

.highlight {
  border: 2px solid #ff0000;
  transition: border 0.3s ease-in-out;
}


</style>
