<!-- app/views/cars/index.html.erb -->
<h1>Cars</h1>

<div class="cars-container">
  <% @cars.each do |car| %>
    <%= render partial: 'car_details', locals: { car: car } %>
  <% end %>
</div>

<% if current_user %>
  <%= link_to 'Add New Car', new_car_path, class: 'add-car-button' %>
<% end %>

<!-- app/views/cars/index.html.erb -->
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= @mapbox_api_key %>">
</div>



<!-- Include your styles here -->


<style>
.cars-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: center;
}

.car {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  max-width: 300px;
  padding: 20px;
  text-align: center;
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.car:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.car h2 {
  font-size: 1.5em;
  margin-bottom: 10px;
}

.car img.car-image {
  width: 100%;
  height: auto;
  max-width: 250px; /* Adjust as needed */
  margin-bottom: 15px;
}

.car p {
  font-size: 1em;
  margin: 5px 0;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 100%;
}

.car .btn {
  display: inline-block;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  color: #fff;
  background-color: #007bff;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
  width: 100%;
}

.car .btn:hover {
  background-color: #0056b3;
}

.car .btn.btn-secondary {
  background-color: #6c757d;
}

.car .btn.btn-secondary:hover {
  background-color: #5a6268;
}

.car .btn.btn-danger {
  background-color: #dc3545;
}

.car .btn.btn-danger:hover {
  background-color: #c82333;
}

.add-car-button {
  display: block;
  margin: 30px auto;
  padding: 15px 30px;
  font-size: 1.2em;
  border-radius: 10px;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #28a745;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
}

.add-car-button:hover {
  background-color: #218838;
}
</style>
