.modal-content {
  background-color: #fff;
  margin: 5% auto;
  padding: 30px;
  border: none;
  width: 50%;
  max-width: 600px;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  animation: slideIn 0.3s ease-out;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e3e2e8;
  margin-bottom: 20px;
}

.cobalt-modal-header__title {
  font-size: 24px;
  font-weight: bold;
}

.close {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 24px;
}

.cobalt-ToggleSwitchField {
  display: inline-block;
  width: 60px;
  height: 34px;
}

.cobalt-ToggleSwitchField__Input {
  opacity: 0;
  width: 0;
  height: 0;
}

.cobalt-ToggleSwitchField__ToggleSwitch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
  background-color: #ccc;
  border-radius: 34px;
  transition: 0.4s;
}

.cobalt-ToggleSwitchField__ToggleSwitchSlider {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  transition: 0.4s;
  border-radius: 50%;
}

input:checked + .cobalt-ToggleSwitchField__ToggleSwitch {
  background-color: #2196F3;
}

input:checked + .cobalt-ToggleSwitchField__ToggleSwitchSlider {
  transform: translateX(26px);
}

.quantity {
  display: flex;
  align-items: center;
}

.cobalt-Stepper__ActionButton {
  background-color: #f0f0f0;
  border: none;
  padding: 10px;
  cursor: pointer;
  transition: background-color 0.2s;
}

.cobalt-Stepper__ActionButton:hover {
  background-color: #ddd;
}

.cobalt-Stepper__ContentWrapper {
  width: 50px;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin: 0 10px;
}

.equipment, .gearbox, .engine, .brand {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.cobalt-CheckablePillField {
  background-color: #f0f0f0;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  border-radius: 8px;
  transition: background-color 0.2s;
  display: flex;
  align-items: center;
  font-size: 16px;
}

.cobalt-CheckablePillField i {
  margin-right: 10px;
}

.cobalt-CheckablePillField:hover {
