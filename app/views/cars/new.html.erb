<h1>New Car</h1>

<%= form_for @car do |f| %>
  <div class="form-group">
    <%= f.label :car_name %>
    <%= f.text_field :car_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :features %>
    <%= f.text_field :features, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :transmission %>
    <%= f.text_field :transmission, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :fuel_type %>
    <%= f.text_field :fuel_type, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :car_make %>
    <%= f.text_field :car_make, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price_per_day %>
    <%= f.number_field :price_per_day, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :number_of_seat %>
    <%= f.number_field :number_of_seat, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Car", class: "btn btn-primary" %>
  </div>
<% end %>
