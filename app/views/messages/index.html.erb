<h1>Messages</h1>

<div id="messages" class="messages-container">
  <% @messages.each do |message| %>
    <%= render partial: 'message', locals: { message: message } %>
  <% end %>
</div>

<div class="new-message">
  <%= form_with model: @message, local: false, id: 'new_message_form' do |form| %>
    <div class="field">
      <%= form.label :recipient_id, "Select Recipient" %>
      <%= form.collection_select :recipient_id, User.all, :id, :email, prompt: "Choose a recipient" %>
    </div>
    <div class="field">
      <%= form.text_area :body, id: 'message_body', placeholder: 'Type your message here...' %>
    </div>
    <div class="actions">
      <%= form.submit 'Send Message', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .messages-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 20px;
  }

  .message {
    padding: 10px;
    border-radius: 5px;
    max-width: 60%;
  }

  .message.sent {
    background-color: #e0f7fa;
    align-self: flex-end;
    text-align: right;
  }

  .message.received {
    background-color: #e8f5e9;
    align-self: flex-start;
  }

  .message-header {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .message-body {
    margin: 0;
  }

  .new-message {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .actions {
    align-self: flex-end;
  }

  #message_body {
    resize: none;
    width: 100%;
    height: 50px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>
