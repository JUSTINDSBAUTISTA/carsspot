<!-- app/views/messages/index.html.erb -->
<% if @recipient %>
  <div id="main-container">
    <div id="chat-container">
      <div id="chat-partners">
        <h2>Chat History</h2>
        <ul>
          <% @chat_partners.each do |partner| %>
            <li>
              <%= link_to messages_path(recipient_id: partner.id) do %>
                <i class="fa fa-user"></i>
                <span><%= partner.name %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div id="chat-content">
        <div id="messages-container" data-controller="messages" data-messages-recipient-id-value="<%= @recipient&.id %>">
          <div id="messages" data-messages-target="messages">
            <%= render partial: 'message', collection: @messages, as: :message %>
          </div>
        </div>
        <div id="form-container">
          <%= form_with model: @message, local: true, data: { 'messages-target': 'form', action: "ajax:success->messages#resetForm" } do |form| %>
            <div class="form-icons">
              <i class="fa fa-paperclip"></i>
              <i class="fa fa-image"></i>
            </div>
            <%= form.text_area :body, placeholder: "Type your message", rows: 1 %>
            <%= form.hidden_field :recipient_id, value: @recipient.id %>
            <%= form.submit 'Send' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <!-- ... rest of the view ... -->
<% end %>



<style>
 /* Scoped styles for the chat system */
#main-container {
  width: 90%;
  max-width: 1000px;
  margin: 20px auto;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

#chat-container {
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  overflow: hidden;
  font-family: 'Poppins', sans-serif;
}

#chat-partners {
  width: 25%;
  background-color: #2c3e50;
  color: #ecf0f1;
  padding: 20px;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

#chat-partners h2 {
  font-size: 20px;
  margin-bottom: 20px;
  text-align: center;
}

#chat-partners ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
  width: 100%;
}

#chat-partners li {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  padding: 10px;
  background-color: #34495e;
  border-radius: 10px;
  transition: background-color 0.3s, transform 0.2s;
}

#chat-partners li .fa {
  color: #ecf0f1;
  font-size: 24px;
  margin-right: 10px;
}

#chat-partners li span {
  color: #ecf0f1;
}

#chat-partners a {
  text-decoration: none;
  color: #ecf0f1;
  display: flex;
  align-items: center;
  width: 100%;
}

#chat-partners li:hover {
  background-color: #1abc9c;
  transform: scale(1.05);
}

#chat-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}

#messages-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  background-color: #f4f7f9;
  overflow-y: auto;
  padding: 20px;
}

#messages {
  flex-grow: 1;
  overflow-y: auto;
}

.message {
  margin-bottom: 15px;
  padding: 15px 20px;
  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  max-width: 75%;
  font-size: 14px;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s;
}

.message.sent {
  align-self: flex-end;
  background-color: #e1f5fe;
}

.message.received {
  align-self: flex-start;
  background-color: #ffffff;
}

.message:hover {
  background-color: #f1f1f1;
}

.message .timestamp {
  font-size: 0.8em;
  color: #888;
  margin-bottom: 5px;
}

.message p {
  margin: 0;
  color: #333;
}

.message strong {
  color: #3498db;
}
#form-container {
  display: flex;
  align-items: center;
  padding: 10px 20px;
  background-color: #f4f7f9;
  border-top: 1px solid #ddd;
  position: sticky;
  bottom: 0;
}

form {
  display: flex;
  align-items: center;
  width: 100%;
}

form textarea {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 20px;
  resize: none;
  font-size: 14px;
  margin-right: 10px;
  height: 40px; /* Adjust the height as needed */
  line-height: 1.5;
  padding-left: 15px;
}

form input[type="submit"] {
  padding: 10px 20px;
  border: none;
  background-color: #3498db;
  color: #fff;
  border-radius: 20px;
  cursor: pointer;
  transition: background-color 0.3s, transform 0.2s;
}

form input[type="submit"]:hover {
  background-color: #2980b9;
  transform: translateY(-2px);
}

form .form-icons {
  display: flex;
  align-items: center;
}

form .form-icons i {
  margin-right: 10px;
  font-size: 20px;
  color: #888;
  cursor: pointer;
  transition: color 0.3s;
}

form .form-icons i:hover {
  color: #3498db;
}


</style>
