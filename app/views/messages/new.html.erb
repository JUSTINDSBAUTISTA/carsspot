<h1>New Message</h1>

<%= form_for @message do |f| %>
  <div class="form-group">
    <%= f.label :recipient_id, "Recipient" %>
    <%= f.collection_select :recipient_id, User.all, :id, :email, { selected: @message.recipient_id }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send Message", class: "btn btn-primary" %>
  </div>
<% end %>

<style>
    .messages-container {
  display: flex;
  justify-content: space-between;

  .received-messages, .sent-messages {
    width: 48%;
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

    h2 {
      border-bottom: 2px solid #44A1A0;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }

    .message {
      background-color: #fff;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);

      p {
        margin: 0;
      }

      .btn-secondary {
        margin-top: 10px;
        background-color: #44A1A0;
        color: white;
      }
    }
  }
}

.form-group {
  margin-bottom: 20px;

  label {
    display: block;
    margin-bottom: 5px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
  }

  .btn-primary {
    background-color: #44A1A0;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
  }
}
</style>