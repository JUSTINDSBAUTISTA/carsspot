  border-radius: 15px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-top: 40px;
  width: 80%;
  max-width: 1200px;
  margin: 0 auto;
}

.notification {
  background-color: #f9f9f9;
  padding: 20px;
  border-radius: 15px;
  margin-bottom: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.notification.unread {
  background-color: #eaf7ff; /* Light blue background for unread notifications */
}

.notification p {
  margin: 5px 0;
  font-size: 1em;
  color: #555;
}

.car-pending-admin {
  background-color: #f1f1f1;
  padding: 15px;
  border-radius: 15px;
  margin-top: 10px;
}

.car-pending-admin h2 {
  margin: 0 0 10px;
