<%= render "shared/flashes" %>

<div class="hero-section">
  <div class="hero-content">
    <h1>Find, book and rent a car <span>Easily</span></h1>
    <p>Get a car wherever and whenever you need it.</p>
  </div>
  <div class="hero-image">
    <%= image_tag "image.png", alt: "Car Image", class: "car-image" %>
  </div>
</div>

<%= form_with url: cars_path, method: :get, id: "search-form", data: { controller: "places-autocomplete date-picker" } do %>
  <div class="search-bar">
    <div class="input-group">
      <div class="input-item">
        <i class="fas fa-map-marker-alt"></i>
        <div class="input-wrapper">
          <label for="location">Location</label>
          <%= text_field_tag :location, params[:location], placeholder: "Search your location", id: "location", class: "location-input", data: { places_autocomplete_target: "homeInput" } %>
        </div>
      </div>
      <div class="input-item">
        <i class="fas fa-calendar-alt"></i>
        <div class="input-wrapper">
          <label for="pickup_date">Pickup date</label>
          <%= date_field_tag :pickup_date, params[:pickup_date], placeholder: "Pickup date", id: "pickup_date", name: "pickup_date", data: { date_picker_target: "startDate" } %>
        </div>
        <div class="input-wrapper time-picker" id="pickup-time-wrapper">
          <label for="pickup_time">Pickup time</label>
          <%= time_field_tag :pickup_time, params[:pickup_time], placeholder: "HH:MM", id: "pickup_time", name: "pickup_time", data: { date_picker_target: "startTime" } %>
        </div>
      </div>
      <div class="input-item">
        <i class="fas fa-calendar-alt"></i>
        <div class="input-wrapper">
          <label for="return_date">Return date</label>
          <%= date_field_tag :return_date, params[:return_date], placeholder: "Return date", id: "return_date", name: "return_date", data: { date_picker_target: "endDate" } %>
        </div>
        <div class="input-wrapper time-picker" id="return-time-wrapper">
          <label for="return_time">Return time</label>
          <%= time_field_tag :return_time, params[:return_time], placeholder: "HH:MM", id: "return_time", name: "return_time", data: { date_picker_target: "endTime" } %>
        </div>
      </div>
      <div class="input-item search-button-wrapper">
        <%= button_tag "Search", class: "search-button" %>
      </div>
    </div>
  </div>
<% end %>

<div class="how-it-works">
  <h2>Rent with following 3 working steps</h2>
  <div class="steps">
    <div class="step">
      <i class="fas fa-map-marker-alt"></i>
