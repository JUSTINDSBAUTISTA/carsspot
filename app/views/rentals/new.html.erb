<h1>Request to Rent <%= @car.car_name %></h1>

<%= form_for @rental, url: rentals_path do |f| %>
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :driving_license %>
    <%= f.text_field :driving_license, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :id_proof %>
    <%= f.text_field :id_proof, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :driving_license_front_image %>
    <%= f.hidden_field :driving_license_front_image, data: { target: "qrcode.frontImage" } %>
    <video data-target="qrcode.frontVideo" autoplay style="display: none;"></video>
    <canvas data-target="qrcode.frontCanvas" style="display:none;"></canvas>
    <input type="file" accept="image/*" capture="environment" data-target="qrcode.frontInput">
    <button type="button" data-action="click->qrcode#captureFrontImage">Capture Front Image</button>
  </div>
  <div class="form-group">
    <%= f.label :driving_license_back_image %>
    <%= f.hidden_field :driving_license_back_image, data: { target: "qrcode.backImage" } %>
    <video data-target="qrcode.backVideo" autoplay style="display: none;"></video>
    <canvas data-target="qrcode.backCanvas" style="display:none;"></canvas>
    <input type="file" accept="image/*" capture="environment" data-target="qrcode.backInput">
    <button type="button" data-action="click->qrcode#captureBackImage">Capture Back Image</button>
  </div>
  <%= f.hidden_field :car_id, value: @car.id %>
  <%= f.submit "Request to Rent", class: "btn btn-primary" %>
<% end %>
