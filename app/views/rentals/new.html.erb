<h1>Request to Rent <%= @car.car_name %></h1>

<%= form_for @rental, url: rentals_path, html: { multipart: true, data: { controller: "qrcode" } } do |f| %>
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :driving_license %>
    <%= f.text_field :driving_license, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :id_proof %>
    <%= f.text_field :id_proof, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :driving_license_front_image, "Upload Driving License Front" %>
    <%= f.file_field :driving_license_front_image, class: "form-control", accept: "image/*", capture: "environment", data: { qrcode_target: "drivingLicenseFrontImage" } %>
  </div>
  <div class="form-group">
    <%= f.label :driving_license_back_image, "Upload Driving License Back" %>
    <%= f.file_field :driving_license_back_image, class: "form-control", accept: "image/*", capture: "environment", data: { qrcode_target: "drivingLicenseBackImage" } %>
  </div>
  <%= f.hidden_field :car_id, value: @car.id %>
  <%= f.submit "Request to Rent", class: "btn btn-primary" %>
<% end %>

<!-- Camera interface -->
<div id="reader" data-qrcode-target="reader" style="width:500px; display: none;"></div>
<button id="start-camera" data-action="click->qrcode#startCamera" class="btn btn-success">Start Camera</button>
<button id="stop-camera" data-action="click->qrcode#stopCamera" class="btn btn-danger" style="display: none;">Stop Camera</button>
